<div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2 pt-5">
  <h3 class="text-center font-weight-bold text-success mt-3">Sign Up</h3>
    <%= devise_error_messages! %> 
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.input :email, required: true, autofocus: true, placeholder: "Email address" %>
      <%= f.input :password, required: true, placeholder: "Password" %>
      <%= f.input :password_confirmation, required: true, placeholder: "Password confirmation", autocomplete: "off"%>
      <%= f.submit "Sign Up", class: 'btn btn-success waves-effect waves-light btn-block btn-lg mt-lg-3' %>
    <% end %>
</div>

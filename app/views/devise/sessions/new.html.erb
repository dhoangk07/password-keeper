<div class="col-lg-4 offset-lg-4 col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2 pt-5">
  <h3 class="text-center font-weight-bold text-success mt-3">Sign in</h3>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email, required: true, autofocus: true, placeholder: "Email address" %>
      <%= f.input :password, required: true, placeholder: "Password", input_html: { class: 'mb-1' }  %>
      <% if devise_mapping.rememberable?%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
      <div class="actions">
        <%= f.submit "Sign in", class: "btn btn-success waves-effect waves-light btn-block btn-lg mt-lg-3" %>
      </div>
    <% end %>
</div>



              
